<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="PocketPilotAI.App.Views.AddTransactionPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:PocketPilotAI.App.ViewModels"
             x:DataType="viewmodels:AddTransactionViewModel"
             Title="Add Transaction">

  <ScrollView>
    <VerticalStackLayout x:Name="AddRoot" Padding="24" Spacing="24">
      <VerticalStackLayout Spacing="8">
        <Label Text="Quick add" Style="{StaticResource MetaLabel}" />
        <Label Text="New Transaction" Style="{StaticResource PageTitleLabel}" />
        <Label Text="Fast capture with minimal friction." Style="{StaticResource BodyLabel}" TextColor="{StaticResource FinMuted}" />
      </VerticalStackLayout>

      <Border Style="{StaticResource SurfaceBorderStyle}">
        <VerticalStackLayout Spacing="12">
          <Border Style="{StaticResource InputSurfaceStyle}"><Entry Placeholder="Account Id (GUID)" Text="{Binding AccountId}" /></Border>
          <Border Style="{StaticResource InputSurfaceStyle}"><Entry Placeholder="Merchant" Text="{Binding MerchantName}" /></Border>
          <Border Style="{StaticResource InputSurfaceStyle}"><Entry Placeholder="Amount" Keyboard="Numeric" Text="{Binding Amount}" /></Border>
          <Border Style="{StaticResource InputSurfaceStyle}"><Entry Placeholder="Currency" Text="{Binding Currency}" /></Border>
          <Border Style="{StaticResource InputSurfaceStyle}"><DatePicker Date="{Binding DateUtc}" /></Border>
          <Border Style="{StaticResource InputSurfaceStyle}"><Entry Placeholder="Notes" Text="{Binding Notes}" /></Border>

          <Button Text="Save transaction" Style="{StaticResource PrimaryButtonStyle}" Command="{Binding SaveCommand}" />
          <Label Text="{Binding StatusMessage}" Style="{StaticResource MetaLabel}" />
        </VerticalStackLayout>
      </Border>
    </VerticalStackLayout>
  </ScrollView>
</ContentPage>
