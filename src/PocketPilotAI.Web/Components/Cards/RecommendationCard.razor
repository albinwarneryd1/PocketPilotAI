<HeroCard AdditionalClass="recommendation-card card-rise">
  <p class="metric-eyebrow">Next best move</p>
  <h3>@Title</h3>
  <p>@Description</p>

  @if (!string.IsNullOrWhiteSpace(ImpactText))
  {
    <p class="save-pill">@ImpactText</p>
  }

  @if (!string.IsNullOrWhiteSpace(CtaLabel) && !string.IsNullOrWhiteSpace(CtaHref))
  {
    <a class="btn-primary" href="@CtaHref">@CtaLabel</a>
  }
</HeroCard>

@code {
  [Parameter] public string Title { get; set; } = string.Empty;

  [Parameter] public string Description { get; set; } = string.Empty;

  [Parameter] public string ImpactText { get; set; } = string.Empty;

  [Parameter] public string CtaLabel { get; set; } = string.Empty;

  [Parameter] public string CtaHref { get; set; } = string.Empty;
}
