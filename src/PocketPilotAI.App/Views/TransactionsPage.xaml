<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PocketPilotAI.App.Views.TransactionsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:PocketPilotAI.App.ViewModels"
    x:DataType="viewmodels:TransactionsViewModel"
    Title="Transactions">

    <Grid Padding="20" RowDefinitions="Auto,*">
        <Button Text="Refresh" Command="{Binding RefreshCommand}" />

        <CollectionView Grid.Row="1" ItemsSource="{Binding Items}" Margin="0,12,0,0">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="0,8" ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                        <Label Text="{Binding MerchantName}" FontAttributes="Bold" />
                        <Label Grid.Column="1" Text="{Binding Amount, StringFormat='{0:0.##}'}" FontAttributes="Bold" />
                        <Label Grid.Row="1" Text="{Binding CategoryName}" FontSize="12" />
                        <Label Grid.Row="1" Grid.Column="1" Text="{Binding DateUtc, StringFormat='{0:yyyy-MM-dd}'}" FontSize="12" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
