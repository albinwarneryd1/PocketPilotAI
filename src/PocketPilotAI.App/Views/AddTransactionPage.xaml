<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PocketPilotAI.App.Views.AddTransactionPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:PocketPilotAI.App.ViewModels"
    x:DataType="viewmodels:AddTransactionViewModel"
    Title="Add Transaction">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Entry Placeholder="Account Id (GUID)" Text="{Binding AccountId}" />
            <Entry Placeholder="Merchant" Text="{Binding MerchantName}" />
            <Entry Placeholder="Amount" Keyboard="Numeric" Text="{Binding Amount}" />
            <Entry Placeholder="Currency" Text="{Binding Currency}" />
            <DatePicker Date="{Binding DateUtc}" />
            <Entry Placeholder="Notes" Text="{Binding Notes}" />
            <Button Text="Save" Command="{Binding SaveCommand}" />
            <Label Text="{Binding StatusMessage}" FontSize="12" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
