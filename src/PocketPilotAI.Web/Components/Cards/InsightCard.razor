<article class="insight-card card-rise">
  <div class="insight-head">
    <h3>@Item.Title</h3>
    <TrendBadge Label="@($"{Item.Confidence * 100m:0}% confidence")" Variant="neutral" />
  </div>

  <p>@Item.Description</p>

  <div class="insight-foot">
    <p><strong>Action:</strong> @Item.SuggestedAction</p>
    <p class="save-pill">@Item.EstimatedMonthlySavings.ToString("0") SEK / month potential</p>
  </div>
</article>

@code {
  [Parameter, EditorRequired] public InsightCardDto Item { get; set; } = default!;
}
