<?xml version="1.0" encoding="utf-8" ?>
<ContentView x:Class="PocketPilotAI.App.Components.InsightCardView"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Name="Root">

  <Border Style="{StaticResource SurfaceBorderStyle}">
    <VerticalStackLayout Spacing="12">
      <Label Text="{Binding Title, Source={x:Reference Root}}" Style="{StaticResource SectionTitleLabel}" />
      <Label Text="{Binding Description, Source={x:Reference Root}}" Style="{StaticResource BodyLabel}" />
      <Label Text="{Binding ActionText, Source={x:Reference Root}}" Style="{StaticResource BodyLabel}" TextColor="{StaticResource FinAccent}" />
      <Label Text="{Binding SavingsText, Source={x:Reference Root}}" Style="{StaticResource MetaLabel}" />
    </VerticalStackLayout>
  </Border>
</ContentView>
