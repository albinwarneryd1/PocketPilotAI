<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PocketPilotAI.App.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:PocketPilotAI.App.ViewModels"
    x:DataType="viewmodels:LoginViewModel"
    Title="Sign in">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Label Text="PocketPilotAI" FontAttributes="Bold" FontSize="28" />
            <Label Text="Sign in or create an account" FontSize="14" />

            <Label Text="Display name (register mode)" IsVisible="{Binding IsRegisterMode}" />
            <Entry Text="{Binding DisplayName}" IsVisible="{Binding IsRegisterMode}" Placeholder="Display name" />

            <Label Text="Email" />
            <Entry Text="{Binding Email}" Keyboard="Email" Placeholder="Email" />

            <Label Text="Password" />
            <Entry Text="{Binding Password}" IsPassword="True" Placeholder="Password" />

            <Button Text="Submit" Command="{Binding SubmitCommand}" />
            <Button Text="Toggle Login/Register" Command="{Binding ToggleModeCommand}" />

            <Label Text="{Binding StatusMessage}" FontSize="12" TextColor="#A12F2F" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
