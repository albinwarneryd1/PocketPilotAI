<article class="insight-card card-rise">
  <div class="insight-head">
    <h3>@Item.Title</h3>
    <TrendBadge Label="@($"{Item.Confidence * 100m:0}% confidence")" Variant="neutral" />
  </div>

  <p>@Item.Description</p>

  <div class="insight-foot">
    <p><strong>Action:</strong> @Item.SuggestedAction</p>
    <span class="save-pill">Saves ~@Item.EstimatedMonthlySavings.ToString("0") SEK/month</span>

    @if (!string.IsNullOrWhiteSpace(ActionHref))
    {
      <a class="btn-tertiary" href="@ActionHref">@ActionLabel</a>
    }
  </div>
</article>

@code {
  [Parameter, EditorRequired] public InsightCardDto Item { get; set; } = default!;

  [Parameter] public string ActionLabel { get; set; } = "View";

  [Parameter] public string ActionHref { get; set; } = "/insights";
}
