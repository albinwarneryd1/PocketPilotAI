<span class="trend-badge @ClassName">
  <span class="trend-icon" aria-hidden="true">@Icon</span>
  <span>@Label</span>
</span>

@code {
  [Parameter] public string Label { get; set; } = string.Empty;

  [Parameter] public string Variant { get; set; } = "neutral";

  private string ClassName => Variant.ToLowerInvariant() switch
  {
    "up" => "up",
    "down" => "down",
    _ => "neutral"
  };

  private string Icon => Variant.ToLowerInvariant() switch
  {
    "up" => "▲",
    "down" => "▼",
    _ => "•"
  };
}
