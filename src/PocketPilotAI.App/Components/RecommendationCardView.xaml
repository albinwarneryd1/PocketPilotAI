<?xml version="1.0" encoding="utf-8" ?>
<ContentView x:Class="PocketPilotAI.App.Components.RecommendationCardView"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Name="Root">

  <Border Style="{StaticResource SurfaceBorderStyle}">
    <VerticalStackLayout Spacing="12">
      <Label Text="Recommendation" Style="{StaticResource MetaLabel}" />
      <Label Text="{Binding Title, Source={x:Reference Root}}" Style="{StaticResource SectionTitleLabel}" />
      <Label Text="{Binding Description, Source={x:Reference Root}}" Style="{StaticResource BodyLabel}" />
      <Button Text="{Binding CtaText, Source={x:Reference Root}}"
              Style="{StaticResource PrimaryButtonStyle}"
              Command="{Binding CtaCommand, Source={x:Reference Root}}" />
    </VerticalStackLayout>
  </Border>
</ContentView>
