<InlineCard AdditionalClass="ai-explanation card-rise">
  <span class="ai-tag">AI context</span>
  <h3>@Title</h3>

  @if (IsLoading)
  {
    <div class="skeleton-stack" aria-hidden="true">
      <span class="skeleton-line full"></span>
      <span class="skeleton-line medium"></span>
      <span class="skeleton-line short"></span>
    </div>
    <p class="supporting-text">Generating your monthly insights...</p>
  }
  else
  {
    <p class="ai-body">@Body</p>
  }
</InlineCard>

@code {
  [Parameter] public string Title { get; set; } = "Monthly coach summary";

  [Parameter] public string Body { get; set; } = string.Empty;

  [Parameter] public bool IsLoading { get; set; }
}
