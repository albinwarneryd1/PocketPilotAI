<?xml version="1.0" encoding="utf-8" ?>
<ContentView x:Class="PocketPilotAI.App.Components.TrendBadgeView"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Name="Root">

  <Border x:Name="BadgeBorder" StrokeShape="RoundRectangle 999" Padding="10,6" StrokeThickness="1">
    <Label Text="{Binding Text, Source={x:Reference Root}}" Style="{StaticResource MetaLabel}" />
  </Border>
</ContentView>
